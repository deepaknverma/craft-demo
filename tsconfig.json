{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}